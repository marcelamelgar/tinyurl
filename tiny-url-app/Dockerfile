# Dockerfile para el frontend
FROM node:16

WORKDIR /app

# Copiar solo package.json y package-lock.json para instalar dependencias
COPY package*.json ./

# Instalar las dependencias
RUN npm install

# Copiar los archivos de la aplicaci贸n
COPY . .

# Construir la aplicaci贸n para producci贸n
RUN npm run build

# Instalar y usar 'serve' para servir la aplicaci贸n
RUN npm install -g serve
EXPOSE 3000
CMD ["serve", "-s", "build"]

